<p class="navbar-text">hello. <%= current_user.user_name %></p>
<div class="menu-bar">
		<div class="search-form visible-lg visible-md ">		
      <%= form_tag(search_path,:method => 'get',class:"navbar-form navbar-left") do %>
          <div class="form-group">
            <%= text_field_tag "search",'',class:"form-control"  %>
            <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
              <%= icon("fas", "search fa-lg") %>
            <% end %>
          </div>
      <% end %>
    </div>
		<ul class="nav navbar-nav navbar-right" >
      <li><%= link_to root_path do %>
              <%= icon("fas", "home fa-lg") %>
          <% end %>
      </li>               
      <li><%= link_to edit_user_registration_path do %>
              <%= icon("fas", "user-edit fa-lg") %>
          <% end %>
      </li>              
      <li><%= link_to notifications_path do %>
              <% if unchecked_notifications.any? %>
                <span class="fa-stack">
                  <%= icon("far", "bell fa-lg fa-stack-2x") %>  
                  <%= icon("fas", "circle n-circle fa-stack-1x") %>  
                </span>
              <% else %>
                <%= icon("far", "bell fa-lg fa-lg") %>
              <% end %>
          <% end %>
      </li>
      <li><%= link_to sign_out_path do %>
              <%= icon("fas", "sign-out-alt fa-lg") %>
          <% end %>
      </li>
		</ul>
</div>